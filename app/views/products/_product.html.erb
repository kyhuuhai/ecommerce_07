<div class="container-fluid">
  <div class="content-wrapper">
    <div class="item-container">
      <div class="container">
        <div class="col-md-12">
          <div class="product col-md-4 service-image-left">
            <center>
              <%= image_tag @product.image %>
            </center>
          </div>
          <div class="col-md-7">
            <div class="product-title"><%= @product.name %></div>
            <div class="product-desc"><%= t "product_description" %></div>
            <div class="product-rating"><i class="fa fa-star gold"></i>
              <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i>
              <i class="fa fa-star gold"></i> <i class="fa fa-star-o"></i>
            </div>
            <hr>
            <div class="product-price"><%= number_to_currency product.price, locale: :vi %></div>
            <div class="product-stock"><%= @product.status %></div>
            <hr>
            <div class="btn-group cart">
              <button type="button" class="btn btn-success">
                <%= t "add_cart" %>
              </button>
            </div>
            <div class="btn-group wishlist">
              <button type="button" class="btn btn-danger">
                <%= t "add_wishlist" %>
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="container-fluid">
        <div class="col-md-12 product-info">
          <ul id="myTab" class="nav nav-tabs nav_tabs">
            <li class="active"><a href="#service-one" data-toggle="tab">
              <%= t "description" %></a></li>
            <li><a href="#service-two" data-toggle="tab">
              <%= t "product_info" %></a></li>
            <li><a href="#service-three" data-toggle="tab">
              <%= t "reviews" %></a></li>
          </ul>
          <div id="myTabContent" class="tab-content">
            <div class="tab-pane fade in active" id="service-one">
              <section class="container product-info">
                <%= @product.description %>
              </section>
            </div>
            <div class="tab-pane fade" id="service-two">
              <section class="container"></section>
            </div>
            <div class="tab-pane fade" id="service-three"></div>
          </div>
          <hr>
        </div>
      </div>
    </div>
  </div>
</div>
