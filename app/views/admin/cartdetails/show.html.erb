<p id="notice"><%= notice %></p>
<h1><%=t ".cartdetails" %></h1>
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th><%=t ".image" %></th>
        <th><%=t ".product_name" %></th>
        <th><%=t ".description" %></th>
        <th><%=t ".product_price" %></th>
        <th><%=t ".quantity" %></th>
        <th><%=t ".category" %></th>
        <th colspan="3"><%=t ".Options" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @cartdetails %>
    </tbody>
  </table>
  <%= will_paginate @cartdetails %>
</div>
