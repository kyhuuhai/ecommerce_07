<h1><%=t ".cart" %></h1>
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th><%=t ".Full_Name" %></th>
        <th><%=t ".Email" %></th>
        <th><%=t ".total_price" %></th>
        <th><%=t ".product_quantity" %></th>
        <th><%=t ".status" %></th>
        <th colspan="3"><%=t ".Options" %></th>
      </tr>
