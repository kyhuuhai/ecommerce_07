<tr>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.password_digest %></td>
  <td>
    <%= link_to t(".info"), admin_user_path(user), class: "btn btn-success" %>
    <%= link_to t(".edit"), edit_admin_user_path(user), class: "btn btn-info" %>
    <%= link_to t(".delete"), admin_user_path(user), method: :delete,
     data: {confirm: t("confirm")}, class: "btn btn-danger" %>
  </td>
</tr>
